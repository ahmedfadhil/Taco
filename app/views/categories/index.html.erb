<h1 align="center">List all categories</h1>
<div align="center">
  <%= will_paginate %>
  <% @categories.each do |category| %>
      <ul class="listing">
        <div class="row">
          <div class="well col-md-4 col-md-offset-4">
            <li class="article-title">
              <%= link_to "#{category.name}", category_path(category) %>
            </li>
            <li>
              <small><%= pluralize(category.articles.count, "articles") %></small>
            </li>

          </div>
          <% if logged_in? and current_user.admin? %>
              <div class="row" align="left">
                <ul>
                  <li> <%= link_to "View Category", edit_category_path(category), class: "btn btn-xs btn-success" %></li>

                  <li> <%= link_to "Edit Category", edit_category_path(category), class: "btn btn-xs btn-primary" %></li>

                  <li>  <%= link_to "Delete Category", edit_category_path(category), class: "btn btn-xs btn-danger" %></li>
                </ul>
              </div>
          <% end %>

        </div>


      </ul>
  <% end %>
  <%= will_paginate %>
</div>