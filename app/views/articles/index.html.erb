<div class="container">

  <h1>List of Articles</h1><br/>
  <div class="btn btn-info btn-lg">
    <span class="glyphicon glyphicon-pencil "><%= link_to "Create Article", new_article_path %></span>
  </div>
  <br/>
<div class="container">
  <table>

    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Description</th>
    </tr>
    <% @articles.each do |article| %>
        <tr>
          <td><%= article.title %></td>
          <td><%= article.author %></td>
          <td><%= article.description %></td>
          <td class="btn btn-info btn-md">
            <span class="glyphicon glyphicon-ok"></span><%= link_to " Show", article_path(article) %></td>
          <td class="btn btn-info btn-md">
            <span class="glyphicon glyphicon-edit"></span><%= link_to " Edit", edit_article_path(article) %></td>


          <td class="btn btn-info btn-md"><span class="glyphicon glyphicon-trash"></span><%= link_to " Delete",
                                                                                                     article_path(article), method: :delete, data:
                                                                                                         {confirm: 'Are you sure ?'} %>
          </td>
        </tr>
    <% end %>

  </table>
</div>
  <ul class="pager">
    <li><a href="#">Previous</a></li>
    <li><a href="#">Next</a></li>
  </ul>
</div>